---
interface Props {
  href?: string;
}

const { href } = Astro.props;
---

<li>
  <a
    class="flex flex-col gap-1 items-center font-medium text-xs transition-duration-300 text-zinc-400 hover:text-zinc-100 md:gap-4 md:flex-row md:text-base md:py-3 md:px-5"
    href={href}
  >
    <slot />
  </a>
</li>
